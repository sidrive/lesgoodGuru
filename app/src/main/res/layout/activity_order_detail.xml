<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorShadow2">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:titleTextColor="@color/colorWhite"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            app:popupTheme="@style/AppTheme" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="?actionBarSize">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingTop="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:padding="@dimen/activity_margin">

                <com.lesgood.guru.util.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Agus Setiawan"
                    android:id="@+id/txt_customer_name"
                    app:typeface="Roboto-Medium.ttf"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:orientation="vertical">
                        <com.lesgood.guru.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            app:typeface="Roboto-Light.ttf"
                            android:text="Pelajaran"/>

                        <com.lesgood.guru.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:id="@+id/txt_product"
                            app:typeface="Roboto-Medium.ttf"
                            android:text="Bahasa Indonesia SMP"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:orientation="vertical">
                        <com.lesgood.guru.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            app:typeface="Roboto-Light.ttf"
                            android:text="Pertemuan"/>

                        <com.lesgood.guru.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:id="@+id/txt_pertemuan"
                            app:typeface="Roboto-Medium.ttf"
                            android:text="20 kali"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:orientation="vertical">
                        <com.lesgood.guru.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            app:typeface="Roboto-Light.ttf"
                            android:text="Order"/>

                        <com.lesgood.guru.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:id="@+id/txt_order_id"
                            app:typeface="Roboto-Medium.ttf"
                            android:text="#123153321"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:orientation="vertical">
                        <com.lesgood.guru.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            app:typeface="Roboto-Light.ttf"
                            android:text="Jumlah Murid"/>

                        <com.lesgood.guru.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:id="@+id/txt_tota_person"
                            app:typeface="Roboto-Medium.ttf"
                            android:text="2 Orang"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:orientation="vertical">
                        <com.lesgood.guru.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            app:typeface="Roboto-Light.ttf"
                            android:text="Date"/>

                        <com.lesgood.guru.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:id="@+id/txt_date"
                            app:typeface="Roboto-Medium.ttf"
                            android:text="Kamis, 7 Apr, 13:50"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:orientation="vertical">
                        <com.lesgood.guru.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            app:typeface="Roboto-Light.ttf"
                            android:text="Payment"/>

                        <com.lesgood.guru.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:id="@+id/txt_status"
                            app:typeface="Roboto-Medium.ttf"
                            android:text="WAITING"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/activity_half_margin">
                    <com.lesgood.guru.util.TypefacedTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tarif Pengajar"
                        app:typeface="Roboto-Regular.ttf"
                        android:textSize="16sp"/>

                    <com.lesgood.guru.util.TypefacedTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rp.400.000"
                        android:id="@+id/txt_tarif"
                        app:typeface="Roboto-Medium.ttf"
                        android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="@dimen/activity_margin">
                <com.lesgood.guru.util.TypefacedTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Siswa"
                    android:textSize="18sp"
                    app:typeface="Roboto-Medium.ttf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:gravity="center|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.lesgood.guru.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama :"
                            android:textSize="12sp"
                            app:typeface="Roboto-Light.ttf" />

                        <com.lesgood.guru.util.TypefacedTextView
                            android:id="@+id/txt_nama_siswa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="GeekGarden Dev"
                            android:textSize="16sp"
                            app:typeface="Roboto-Medium.ttf" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.lesgood.guru.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alamat :"
                            android:textSize="12sp"
                            app:typeface="Roboto-Light.ttf" />

                        <com.lesgood.guru.util.TypefacedTextView
                            android:id="@+id/txt_alamat_siswa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jl. Kinanti, Condong Catur, Sleman"
                            android:textSize="14sp"
                            app:typeface="Roboto-Medium.ttf" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.lesgood.guru.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No. Telp/HP :"
                            android:textSize="12sp"
                            app:typeface="Roboto-Light.ttf" />

                        <com.lesgood.guru.util.TypefacedTextView
                            android:id="@+id/txt_telp_siswa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="08123456789"
                            android:textSize="14sp"
                            app:typeface="Roboto-Medium.ttf" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.lesgood.guru.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email :"
                            android:textSize="12sp"
                            app:typeface="Roboto-Light.ttf" />

                        <com.lesgood.guru.util.TypefacedTextView
                            android:id="@+id/txt_email_siswa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="geekgarden@gmail.com"
                            android:textSize="14sp"
                            app:typeface="Roboto-Medium.ttf" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="@dimen/activity_margin">




                <com.lesgood.guru.util.TypefacedTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Guru"
                    android:textSize="18sp"
                    app:typeface="Roboto-Medium.ttf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:gravity="center|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.lesgood.guru.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama :"
                            android:textSize="12sp"
                            app:typeface="Roboto-Light.ttf" />

                        <com.lesgood.guru.util.TypefacedTextView
                            android:id="@+id/txt_nama_guru"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="GeekGarden Dev"
                            android:textSize="16sp"
                            app:typeface="Roboto-Medium.ttf" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.lesgood.guru.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alamat :"
                            android:textSize="12sp"
                            app:typeface="Roboto-Light.ttf" />

                        <com.lesgood.guru.util.TypefacedTextView
                            android:id="@+id/txt_alamat_guru"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jl. Kinanti, Condong Catur, Sleman"
                            android:textSize="14sp"
                            app:typeface="Roboto-Medium.ttf" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.lesgood.guru.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No. Telp/HP :"
                            android:textSize="12sp"
                            app:typeface="Roboto-Light.ttf" />

                        <com.lesgood.guru.util.TypefacedTextView
                            android:id="@+id/txt_telp_guru"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="08123456789"
                            android:textSize="14sp"
                            app:typeface="Roboto-Medium.ttf" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.lesgood.guru.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email :"
                            android:textSize="12sp"
                            app:typeface="Roboto-Light.ttf" />

                        <com.lesgood.guru.util.TypefacedTextView
                            android:id="@+id/txt_email_guru"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="geekgarden@gmail.com"
                            android:textSize="14sp"
                            app:typeface="Roboto-Medium.ttf" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_marginTop="@dimen/activity_margin"
                android:padding="@dimen/activity_margin"
                android:visibility="visible"
                android:orientation="vertical">

                <com.lesgood.guru.util.TypefacedTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:typeface="Roboto-Medium.ttf"
                    android:text="Detail Lokasi"/>

                <com.lesgood.guru.util.TypefacedTextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jarak 13 km"
                    android:id="@+id/txt_distance"
                    app:typeface="Roboto-Regular.ttf"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@color/colorGrey400"
                    android:id="@+id/img_map"/>

                <com.lesgood.guru.util.TypefacedTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Detail lokasi"
                    android:id="@+id/txt_detail_lokasi"
                    app:typeface="Roboto-Light.ttf"
                    android:textSize="16sp"
                    android:layout_marginTop="@dimen/activity_half_margin"/>

            </LinearLayout>
            <LinearLayout
              android:id="@+id/lytPustaka"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:layout_marginTop="@dimen/activity_margin"
              android:padding="@dimen/activity_margin"
              android:visibility="gone"
              android:orientation="vertical">

                <com.lesgood.guru.util.TypefacedTextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="10dp"
                  app:typeface="Roboto-Medium.ttf"
                  android:text="Daftar Pustaka"/>
                <android.support.v7.widget.RecyclerView
                  android:id="@+id/rcvPustaka"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!--Button terima/tolak-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/lin_action"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorShadow2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_weight="1"
                android:text="TERIMA"
                android:textAllCaps="true"
                android:id="@+id/btn_positif"
                android:textColor="@color/colorAccent"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_weight="1"
                android:text="BATALKAN"
                android:id="@+id/btn_negatif"
                android:textAllCaps="true"
                android:textColor="@color/colorRed"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/view_progress"/>

</android.support.design.widget.CoordinatorLayout>