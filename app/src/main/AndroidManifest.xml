<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.lesgood.guru">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
  <uses-permission android:name="android.permission.CAMERA"/>
  <uses-permission android:name="android.permission.WAKE_LOCK"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
  <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:name=".base.BaseApplication"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:name=".ui.splash.SplashActivity"
      android:theme="@style/AppTheme">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
      <intent-filter>
        <action android:name="android.intent.action.VIEW"/>
        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.BROWSABLE"/>
        <data android:host="lesgood.com" android:scheme="http"/>
        <data android:host="lesgood.com" android:scheme="https"/>
      </intent-filter>
    </activity>

    <meta-data
      android:name="com.facebook.sdk.ApplicationId"
      android:value="@string/facebook_app_id"/>
    `
    <activity
      android:name=".ui.login.LoginActivity"
      android:theme="@style/AppTheme"/>
    <activity
      android:name=".ui.edit_profile.EditProfileActivity"
      android:theme="@style/AppTheme"
      android:windowSoftInputMode="stateHidden"/>
    <activity
      android:name=".ui.main.MainActivity"
      android:theme="@style/AppTheme"
      android:windowSoftInputMode="stateHidden"/>
    <activity
      android:name=".ui.brief.BriefActivity"
      android:theme="@style/AppTheme"/>
    <activity
      android:name=".ui.add_skill.AddSkillActivity"
      android:theme="@style/AppTheme"/>
    <activity
      android:name=".ui.add_location.AddLocationActivity"
      android:theme="@style/AppTheme"/>
    <activity
      android:label="Pengaturan"
      android:name=".ui.setting.SettingActivity"/>
    <activity
      android:label="Order Detail"
      android:name=".ui.order_detail.OrderDetailActivity"
      android:screenOrientation="portrait"
      android:theme="@style/AppTheme"/>
    <activity
      android:label="Kemampuan Mengajar"
      android:name=".ui.skill.SkillActivity"
      android:screenOrientation="portrait"
      android:theme="@style/AppTheme"/>
    <activity
      android:name=".ui.wallet.WalletActivity"
      android:theme="@style/AppTheme"/>
    <activity
      android:name=".ui.payment_detail.PaymentDetailActivity"
      android:theme="@style/AppTheme"/>
    <activity
      android:name=".data.verification.VerificationActivity"
      android:theme="@style/AppTheme"/>
    <activity
      android:name=".ui.prestasi.PrestasiActivity"
      android:theme="@style/AppTheme"/>
    <activity
      android:name=".ui.reviews.ReviewsActivity"
      android:theme="@style/AppTheme"/>
    <activity
      android:name=".ui.update_information.UpdateInformationActivity"
      android:theme="@style/AppTheme"/>
    <activity
      android:name=".ui.pengalaman.PengalamanActivity"
      android:theme="@style/AppTheme"/>
    <activity
      android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
      android:theme="@style/Base.Theme.AppCompat"/>
    <activity
      android:name=".ui.intro.IntroActivity"
      android:theme="@style/Theme.Intro"/>

    <meta-data
      android:name="com.google.firebase.messaging.default_notification_icon"
      android:resource="@drawable/ic_appointment_24dp_primary"/>
    <!--
             Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more.
        -->
    <meta-data
      android:name="com.google.firebase.messaging.default_notification_color"
      android:resource="@color/colorPrimary"/>

    <service android:name=".data.remote.MyFirebaseMessagingService">
      <intent-filter>
        <action android:name="com.google.firebase.MESSAGING_EVENT"/>
      </intent-filter>
    </service>
    <!-- [END firebase_service] -->
    <!-- [START firebase_iid_service] -->
    <service android:name=".data.remote.FirebaseInstanceIDService">
      <intent-filter>
        <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
      </intent-filter>
    </service>

    <meta-data
      android:name="com.google.android.geo.API_KEY"
      android:value="@string/google_maps_key"/>

    <activity
      android:label="@string/title_activity_maps"
      android:name=".ui.map.MapsActivity">
    </activity>


  </application>

</manifest>